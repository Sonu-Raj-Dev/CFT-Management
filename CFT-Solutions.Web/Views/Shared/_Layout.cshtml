    <script src="~/lib/js/jquery.datatables.min.js"></script>
    
    <script>
        (function () {
            const toggleBtn = document.getElementById('sidebarToggle');
            const storageKey = 'cft_sidebar_collapsed';
            
            function setCollapsed(collapsed) {
                const body = document.body;
                if (collapsed) {
                    body.classList.add('sidebar-collapsed');
                    toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
                    toggleBtn.setAttribute('title', 'Expand Sidebar');
                } else {
                    body.classList.remove('sidebar-collapsed');
                    toggleBtn.innerHTML = '<i class="fas fa-times"></i>';
                    toggleBtn.setAttribute('title', 'Collapse Sidebar');
                }
            }
            
            // Initialize from localStorage
            try {
                const saved = localStorage.getItem(storageKey);
                if (saved === '1') {
                    setCollapsed(true);
                }
            } catch (e) {
                console.log('LocalStorage not available');
            }
            
            // Toggle sidebar
            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    const collapsed = !document.body.classList.contains('sidebar-collapsed');
                    setCollapsed(collapsed);
                    try {
                        localStorage.setItem(storageKey, collapsed ? '1' : '0');
                    } catch (e) {
                        console.log('Failed to save sidebar state');
                    }
                });
            }
            
            // Auto-collapse on mobile when clicking outside
            if (window.innerWidth <= 768) {
                document.addEventListener('click', function(event) {
                    const sidebar = document.querySelector('.app-sidebar');
                    const isClickInsideSidebar = sidebar.contains(event.target);
                    const isClickOnToggle = toggleBtn.contains(event.target);
                    
                    if (!isClickInsideSidebar && !isClickOnToggle && !document.body.classList.contains('sidebar-collapsed')) {
                        setCollapsed(true);
                    }
                });
            }
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

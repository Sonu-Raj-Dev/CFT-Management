            // Handle hover behavior
            function handleHoverBehavior() {
                const isManualCollapsed = body.classList.contains('sidebar-collapsed-manual');

                if (!isManualCollapsed) {
                    // Auto-collapse when mouse leaves sidebar area
                    const sidebarArea = document.querySelector('.app-content-row');

                    sidebarArea.addEventListener('mouseenter', function(e) {
                        if (body.classList.contains('sidebar-collapsed')) {
                            body.classList.remove('sidebar-collapsed');
                            saveSidebarState('expanded');
                        }
                    });

                    sidebarArea.addEventListener('mouseleave', function(e) {
                        if (!body.classList.contains('sidebar-collapsed') &&
                            !e.relatedTarget?.closest('.app-sidebar')) {
                            body.classList.add('sidebar-collapsed');
                            saveSidebarState('collapsed-auto');
                        }
                    });

                    sidebar.addEventListener('mouseenter', function(e) {
                        if (body.classList.contains('sidebar-collapsed')) {
                            body.classList.remove('sidebar-collapsed');
                        }
                    });

                    sidebar.addEventListener('mouseleave', function(e) {
                        if (!body.classList.contains('sidebar-collapsed') &&
                            !e.relatedTarget?.closest('.app-content-row')) {
                            setTimeout(() => {
                                if (!sidebar.matches(':hover') && !document.querySelector('.app-content-row').matches(':hover')) {
                                    body.classList.add('sidebar-collapsed');
                                    saveSidebarState('collapsed-auto');
                                }
                            }, 100);
                        }
                    });
                }
            }

            // Save sidebar state
            function saveSidebarState(state) {
                try {
                    localStorage.setItem(storageKey, state);
                } catch (e) {
                    console.log('Failed to save sidebar state');
                }
            }

            // Auto-expand submenu when on masters page
            function handleMastersSubmenu() {
                const mastersControllers = ['UserMaster', 'EngineerMaster', 'CustomerMaster', 'NatureOfComplaint', 'StatusMaster'];
                const currentController = '@controllerName';

                if (mastersControllers.includes(currentController)) {
                    const submenu = document.getElementById('mastersSubmenu');
                    if (submenu) {
                        submenu.classList.add('show');
                        const submenuLink = document.querySelector('[href="#mastersSubmenu"]');
                        if (submenuLink) {
                            submenuLink.setAttribute('aria-expanded', 'true');
                        }
                    }
                }
            }

            // Loading functions
            window.showLoading = function() {
                document.getElementById('loadingOverlay').style.display = 'flex';
            };

            window.hideLoading = function() {
                document.getElementById('loadingOverlay').style.display = 'none';
            };

            // Initialize
            document.addEventListener('DOMContentLoaded', function() {
               // initSidebar();
                handleMastersSubmenu();
               // handleHoverBehavior();

                // Toggle sidebar on button click
                if (toggleBtn) {
                    toggleBtn.addEventListener('click', toggleSidebar);
                }

                // Auto-close alerts after 5 seconds
                setTimeout(function() {
                    const alerts = document.querySelectorAll('.alert-message');
                    alerts.forEach(alert => {
                        alert.style.transition = 'opacity 0.5s';
                        alert.style.opacity = '0';
                        setTimeout(() => alert.remove(), 500);
                    });
                }, 5000);

                // Handle mobile sidebar click outside
                if (window.innerWidth <= 768) {
                    document.addEventListener('click', function(event) {
                        const isClickInsideSidebar = sidebar.contains(event.target);
                        const isClickOnToggle = toggleBtn.contains(event.target);

                        if (!isClickInsideSidebar && !isClickOnToggle && !body.classList.contains('sidebar-collapsed')) {
                            body.classList.add('sidebar-collapsed', 'sidebar-collapsed-manual');
                            updateToggleButton(true, true);
                            saveSidebarState('collapsed-manual');
                        }
                    });
                }

                // Initialize DataTables if present
                if ($.fn.DataTable) {
                    $('.data-table').DataTable({
                        "pageLength": 10,
                        "language": {
                            "search": "Search:",
                            "lengthMenu": "Show _MENU_ entries",
                            "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                            "infoEmpty": "Showing 0 to 0 of 0 entries",
                            "infoFiltered": "(filtered from _MAX_ total entries)",
                            "zeroRecords": "No matching records found",
                            "paginate": {
                                "first": "First",
                                "last": "Last",
                                "next": "Next",
                                "previous": "Previous"
                            }
                        }
                    });
                }
            });

            // Window resize handler
            window.addEventListener('resize', function() {
                if (window.innerWidth <= 768 && !body.classList.contains('sidebar-collapsed')) {
                    body.classList.add('sidebar-collapsed', 'sidebar-collapsed-manual');
                    updateToggleButton(true, true);
                    saveSidebarState('collapsed-manual');
                }
            });

        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

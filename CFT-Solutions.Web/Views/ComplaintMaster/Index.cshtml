@{
    ViewData["Title"] = "Complaint Master";
}

<div class="container-fluid mt-4">
    <div class="row mb-4 align-items-center">
        <!-- Title: full width on small, 8/12 from md up -->
        <div class="col-12 col-md-8 mb-2 mb-md-0">
            <h2 class="mb-0">Complaint Master</h2>
        </div>

        <!-- Button: full width + centered on small, right-aligned on md+ -->
        <div class="col-12 col-md-4 d-grid d-md-flex justify-content-md-end">
            <button type="button"
                    class="btn btn-primary newRequestbtn w-100 w-md-auto"
                    data-toggle="modal"
                    data-target="#myModal"
                    onclick="@("window.location.href='" + @Url.Action("Create", "ComplaintMaster") + "'")">
                <i class="fa fa-plus my-float"></i> Add Complaint
            </button>
        </div>
    </div>

    <!-- Search Box -->
    <div class="row mb-3 g-2">
        <!-- Input: full width on small, 4/12 from md up -->
        <div class="col-12 col-md-4">
            <input type="text"
                   id="searchInput"
                   class="form-control"
                   placeholder="Search by name, email...">
        </div>

        <!-- Button: full width on small, 2/12 from md up -->
        <div class="col-12 col-md-2 d-grid">
            <button id="btnSearch"
                    class="btn btn-outline-primary">
                Search
            </button>
        </div>
    </div>

    <!-- Responsive Table Wrapper -->
    <div class="table-responsive">
        <table id="usersTable" class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Complaint Code</th>
                    <th>Customer Name</th>
                    <th>Complaint Details</th>
                    <th>Mobile Number</th>
                    <th>Status</th>
                    <th>Nature Of Complaint</th>
                    <th>Engineer Name</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <!-- Data populated by AJAX -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/custom/complaintmaster/complaintmaster.js"></script>
}
